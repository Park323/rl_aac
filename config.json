{
    "name": "Mnist_LeNet",
    "n_gpu": 1,

    "arch": {
        "type": "MnistModel",
        "args": {}
    },
    "data_loader": {
        "type": "ClothoDataLoader",
        "args":{
            "data_dir": "/home/nas/DB/Clotho/clotho_v2_vggish/development",
            "optional_dir": "/home/nas/DB/Clotho/clotho_v2_vggish/validation",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2,
            "max_audio_len": 32,
            "max_token_len": 64,
            "tokenizer": "facebook/bart-base",
            "input_field":"vggish_embeddings",
            "output_field":"caption"
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "aac_metrics"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
